@inject NavigationManager Navigation
@inject AuthenticationStateService AuthService
@using FinLY.Models
@using FinLY.Services
@inject IUserServices UserServices
@inject NavigationManager Navigation
@using System.Security.Cryptography
@using System.Text
@inject AuthenticationStateService AuthService


<div class="nav_sidebar">
    <div class="logo">
        <img src="./Images/finlylogo.png" alt="Logo" />
        <h1>FinLY</h1>
    </div>
    <nav class="nav" onclick="document.querySelector('.navbar-toggler').click()">
        <NavLink class="nav-item" href="dashboard" Match="NavLinkMatch.All">
            <span><i class="bi bi-house-door"></i></span>
            <span>Dashboard</span>
        </NavLink>

        <NavLink class="nav-item" href="transactions">
            <span><i class="bi bi-cash"></i></span>
            <span>Transactions</span>
        </NavLink>


        <NavLink class="nav-item" href="debts">
            <span><i class="bi bi-bank"></i></span>
            <span>Debts</span>
        </NavLink>


        <NavLink class="nav-item" href="tags">
            <span><i class="bi bi-tags"></i></span>
            <span>Tags</span>
        </NavLink>
    </nav>

    <div class="footer">
        
        <button class="export-button right" @onclick="LogOutbtn"><i class="bi bi-box-arrow-right"></i> Log Out</button>
    </div>
</div>

@code {
    private async Task LogOutbtn(MouseEventArgs e)
    {
        AuthService.LogOut();

        Navigation.NavigateTo("/", forceLoad: true);
    }
}